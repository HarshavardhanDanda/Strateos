<div class="panel panel-default sign-in-panel">
  <div class="panel-heading">
    <h3 class="panel-title white-text">Resend confirmation instructions</h3>
  </div>
  <div class="panel-body">
    <%= render("devise/shared/error_messages", resource: resource) %>
    <%= form_tag confirmation_path(resource_name), :id => 'resend-confirmation-form' do %>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="billing_contact[email]" id="billing_contact_email" autofocus />
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= button_tag "Resend confirmation instructions", :type  => 'submit', :class => 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
