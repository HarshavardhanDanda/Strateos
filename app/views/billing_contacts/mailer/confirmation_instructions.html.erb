  <tr>
    <td>
      <p style="font-size:24px;color:#0E202E;line-height:160%;margin:0;padding:0;letter-spacing:0.3px" class="source light">
        Hi <%= @resource.name %>,
      </p>
    </td>
  </tr>

  <tr>
    <td style="height:50px"></td>
  </tr>

  <tr>
