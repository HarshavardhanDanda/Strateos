<table border="0" cellpadding="0" cellspacing="0" width="445" align="center" style="margin:auto" class="fullwidth">
  <tr>
    <td class="content" style="padding:0 0 30px 0">
      <p style="font-size:17px;font-style:italic;color:#0E202E;line-height:160%;margin:0;padding:0;letter-spacing:0.3px" class="source light">
        <%= h(@post.text).gsub("\n", "<br>").html_safe %>
      </p>
    </td>
  </tr>

  <tr>
    <td>
      <p style="font-size:17px;color:#0E202E;line-height:160%;margin:0;padding:0;letter-spacing:0.3px" class="source light">
        by <%= @post.author_name %>
        <%= @post.created_at.strftime "on %b %-d, %Y, at %I:%M %p" %>
      </p>
    </td>
  </tr>

  <tr>
    <td style="height:50px"></td>
  </tr>

  <tr>
    <td align="center">
      <a href="<%= polymorphic_url [@run.organization, @run.project, @run] %>">
        <img src="http://static-public.transcriptic.com/email/run_status/view-run-btn@2x.png" width="250" height="40" style="display:block;margin:auto;border:none" align="center" />
      </a>
    </td>
  </tr>

  <tr>
    <td style="height:50px"></td>
  </tr>

  <tr>
    <td class="content" style="padding:0 0 30px 0">
      <p style="text-align:center;font-size:15px;color:#0E202E;line-height:160%;margin:0;padding:0;letter-spacing:0.3px" class="source light">
        This comment was posted on the run titled: <%= @run.display_name %>
      </p>
    </td>
  </tr>

</table>
