<table border="0" cellpadding="0" cellspacing="0" width="445" align="center" style="margin:auto" class="fullwidth">
  <tr>
    <td class="content" style="padding:0 0 30px 0">
      <p style="text-align:center;font-size:17px;color:#0E202E;line-height:160%;margin:0;padding:0;letter-spacing:0.3px" class="source light">
        A run titled
        <span style="font-style:italic"><%= @run.display_name %></span>
        was recently submitted by <%= @run.owner.name %> of <%= @run.organization.name %>.
      </p>
    </td>
  </tr>


  <% if not @run.quote['items'].nil? %>
    <tr>
      <td>
        <table width="100%"  border="0" cellpadding="0" cellspacing="0" align="center">
          <tr>
            <td height="50px"></td>
          </tr>
          <tr>
            <td style="border-bottom:1px solid #f1f2f3"></td>
          </tr>
          <tr>
            <td height="50px"></td>
          </tr>
          <tr>
            <td>
              <table width="250" class="shadedbox" style="background-color:#fafafa;border:1px solid #eff1f2;margin:auto">
                <tr>
                  <td style="padding:15px 0;font-weight:bold;font-size:10px;letter-spacing:1px;text-align:center;color:#98A8B4" class="source">RUN SUMMARY</td>
                </tr>
                <tr>
                  <td style="padding:0 0 15px 0">
                    <table border="0" cellpadding="0" cellspacing="0" width="250">
                      <tr>
                        <td width="15"></td>
                        <td width="185" style="font-size:12px;line-height:150%;color:#37434C;letter-spacing:0.3px;padding:5px 0;text-align:left" class="source" valign="top">Total</td>
                        <td width="35" style="font-size:12px;line-height:150%;color:#37434C;text-align:right;padding:5px 0 5px 10px;letter-spacing:0.3px" class="source" valign="top"><%= number_to_currency @run.total_cost %></td>
                        <td width="15"></td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  <% end %>


  <tr>
    <td height="30px"></td>
  </tr>

  <tr>
    <td align="center">
      <a href="<%= organization_project_run_url(@run.project.organization.subdomain, @run.project.id, @run) %>">
        <img src="http://static-public.transcriptic.com/email/run_status/view-run-btn@2x.png" width="250" height="40" style="display:block;margin:auto;border:none" align="center" />
      </a>
    </td>
  </tr>

</table>
